# Server Configuration
NODE_ENV=development
HOST=localhost
PORT=4003
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/course_db?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting
COMMON_RATE_LIMIT_MAX_REQUESTS=1000
COMMON_RATE_LIMIT_WINDOW_MS=900000

# Service Dependencies
USER_SERVICE_URL=http://localhost:4001
NOTIFICATION_SERVICE_URL=http://localhost:4002
SERVICE_RETRY_ATTEMPTS=5
SERVICE_RETRY_INTERVAL=5000

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,video/mp4
MAX_FILES_PER_REQUEST=5

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Kafka Configuration
KAFKA_BROKER=localhost:9092
KAFKA_CLIENT_ID=course-service
KAFKA_GROUP_ID=course-service-group

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=120

# Course Configuration
MAX_COURSE_TITLE_LENGTH=200
MAX_COURSE_DESCRIPTION_LENGTH=5000
MAX_MODULE_COUNT_PER_COURSE=50
MAX_SUBMODULE_COUNT_PER_MODULE=20

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_VIDEO_PROCESSING=false
ENABLE_COURSE_REVIEWS=true
ENABLE_COURSE_RECOMMENDATIONS=false
